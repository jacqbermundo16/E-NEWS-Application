<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ENews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorPrimary">@color/green</item>

        <!-- status-nav bar color. -->
        <item name="android:statusBarColor">@color/white_shade</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.ENews" parent="Base.Theme.ENews"></style>
    <style name="Theme.ENews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ENews.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ENews.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="btnGray">
        <item name="android:background">@drawable/custom_btn</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:enabled">true</item>
    </style>

</resources>