<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SigninActivity"
    android:orientation="vertical"
    android:padding="20dp"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/signupOverlay"
        android:layout_width="454dp"
        android:layout_height="583dp"
        android:contentDescription="@string/signup_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.257"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/appLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/login_view"
        android:layout_width="331dp"
        android:layout_height="32dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="51dp"
        android:contentDescription="@string/login_view"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/login_view"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signupOverlay"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signupOverlay"
        app:layout_constraintTop_toTopOf="@+id/signupOverlay"
        app:layout_constraintVertical_bias="0.04000002" />

    <TextView
        android:id="@+id/accDetails2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/details2_view"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="@+id/login_view"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="@+id/login_view"
        app:layout_constraintTop_toBottomOf="@+id/login_view" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enterName_login"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:autofillHints="no"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_username_foreground"
        android:drawablePadding="3dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:includeFontPadding="false"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:boxBackgroundMode="none"
        app:layout_constraintEnd_toEndOf="@+id/login_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/login_view"
        app:layout_constraintTop_toBottomOf="@+id/accDetails2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawableStart="@drawable/ic_username_foreground"
            android:drawablePadding="3dp"
            android:fontFamily="@font/montserrat_semibold"
            android:hint="@string/enterName"
            android:inputType="text"
            android:scaleType="centerInside"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enterPassword_login"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:autofillHints="no"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="@string/enterPassword"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/enterName_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/enterName_login"
        app:layout_constraintTop_toBottomOf="@+id/enterName_login"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawableStart="@drawable/ic_password_foreground"
            android:drawablePadding="3dp"
            android:fontFamily="@font/montserrat_semibold"
            android:hint="@string/enterPassword"
            android:inputType="textPassword"
            android:scaleType="centerInside"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/forgotPass"
        android:textColor="#689273"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="@+id/enterPassword_login"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="@+id/enterPassword_login"
        app:layout_constraintTop_toBottomOf="@+id/enterPassword_login"
        app:layout_constraintVertical_bias="0.269" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="17sp"
        android:background="@drawable/custom_btn"
        android:text="@string/login"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/signupOverlay"
        app:layout_constraintEnd_toEndOf="@+id/enterPassword_login"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/enterPassword_login"
        app:layout_constraintTop_toBottomOf="@+id/enterPassword_login"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/noAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="188dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/noAcc"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/signupOverlay"
        app:layout_constraintEnd_toEndOf="@+id/btnLogin"
        app:layout_constraintHorizontal_bias="0.282"
        app:layout_constraintStart_toStartOf="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintVertical_bias="0.418" />

    <TextView
        android:id="@+id/noAcc_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/noAcc_true"
        android:textColor="#689273"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/signupOverlay"
        app:layout_constraintEnd_toEndOf="@+id/btnLogin"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toEndOf="@+id/noAcc"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintVertical_bias="0.58" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_backbutton_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/appLogo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

</androidx.constraintlayout.widget.ConstraintLayout>