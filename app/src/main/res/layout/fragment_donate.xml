    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="10dp"
    tools:context=".Donate"
    android:orientation="vertical">

    <TextView
        android:id="@+id/DonateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:text="Donate"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_semibold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/donation_bg"/>

            <ImageView
                android:id="@+id/orgImage1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/Forest_Foundation_PH_logo"/>

            <TextView
                android:id="@+id/donateOrg1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end"
                android:padding="5dp"
                android:gravity="start"
                android:text="Forest Foundation Philippines"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_black"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/orgDesc1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/montserrat"
                android:padding="5dp"
                android:text="Let's Grow Together"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center|bottom"
                android:src="@drawable/ic_phone_contact_foreground"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="68dp"/>

            <TextView
                android:id="@+id/orgPhone1"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:layout_marginTop="77dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/montserrat"
                android:padding="10dp"
                android:text="(+63 2) 8891 0595 or (+63 2) 8864 0287"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center|bottom"
                android:src="@drawable/ic_email_contact_foreground"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="39dp"/>

            <TextView
                android:id="@+id/orgEmail1"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:layout_marginTop="106dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/montserrat"
                android:padding="10dp"
                android:text="info@forestfoundation.ph"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center|bottom"
                android:src="@drawable/ic_website_contact_foreground"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/orgWebsite1"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/montserrat"
                android:padding="10dp"
                android:clickable="true"
                android:text="https://www.forestfoundation.ph"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

